{% extends 'layout/centered.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}

    <div class="box w-50 mt-12 mx-auto">
        {{ form_start(registrationForm, { attr: {class: 'form-register'}}) }}
            <h3 class="title is-3">Register now</h3>
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.fullname) }}
            {{ form_row(registrationForm.institution) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}

            <div class="buttons is-centered">
              <button class="button is-primary">Register</button>
              <a href="{{ path('app_login') }}" class="button is-text">Already register ?</a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
