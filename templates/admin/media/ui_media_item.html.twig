<div class="media" data-id="{{ media.id}}" data-description="{{ media.description }}" data-url="{{ media.url }}" data-type="{{ media.type }}">
  <div class="content">
    {% if media.type == 'image' %}
    <img src="{{ media.url }}" alt="{{ media.description }}" />
    {% else %}
    <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24"><path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm4.441 16.892c-2.102.144-6.784.144-8.883 0-2.276-.156-2.541-1.27-2.558-4.892.017-3.629.285-4.736 2.558-4.892 2.099-.144 6.782-.144 8.883 0 2.277.156 2.541 1.27 2.559 4.892-.018 3.629-.285 4.736-2.559 4.892zm-6.441-7.234l4.917 2.338-4.917 2.346v-4.684z"/></svg>
    {% endif %}
  </div>
  <div class="description">
    <span>{{ media.description }}</span>
  </div>
  <div class="buttons">
    <a class="" href="{{ path('admin_media_edit', {id: media.id}) }}">
